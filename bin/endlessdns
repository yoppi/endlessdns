#!/usr/bin/env ruby

# Add EndlessDNS library to $LOAD_PATH.
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'rubygems'
require 'endlessdns'
require 'optparse'

begin
  options = {:daemonize => true, :web => true}
  opts = OptionParser.new do |opts|
    opts.on("-D", "--no-daemonize", "Don't daemonize") do
      options[:daemonize] = false
    end

    opts.on("-v", "--version", "Print the version number and exit") do
      options[:version] = true
    end

    opts.on("--no-web", "Don't start webserver") do
      options[:web] = false
    end

    opts.on("-p", "--pid", "To watch DNS cache server with pid") do |o|
      options[:pid] = o
    end
  end
  opts.parse!

  if options[:version]
    EndlessDNS::Version.version
  elsif !options[:pid]
    raise "set DNS cache server pid!"
  else
    # EndlessDNS entry point.
    EndlessDNS::Engine.invoke options
  end
rescue => e
  if e.instance_of?(SystemExit)
    raise
  else
    puts "Uncaught exception"
    puts e.message
    puts e.backtrace.join("\n")
  end
end

